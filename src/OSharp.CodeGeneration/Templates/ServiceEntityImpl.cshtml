using System;
using System.Linq;
using System.Linq.Expressions;
using System.Threading.Tasks;

using OSharp.Data;
using OSharp.Dependency;
using OSharp.Extensions;
using OSharp.Mapping;

using @(Model.Module.Namespace).Dtos;
using @(Model.Module.Namespace).Entities;
using @(Model.Module.Namespace).Events;


namespace @(Model.Module.Namespace)
{
    public partial class @(Model.Module.Name)Service
    {
        /// &lt;summary&gt;
        /// 获取 @(Model.Display)信息查询数据集
        /// &lt;/summary&gt;
        public IQueryable&lt;@(Model.Name)&gt; @(Model.Name.ToPlural())
        {
            get { return @(Model.Name)Repository.Query(); }
        }

        /// &lt;summary&gt;
        /// 检查@(Model.Display)信息是否存在
        /// &lt;/summary&gt;
        /// &lt;param name="predicate"&gt;检查谓语表达式&lt;/param&gt;
        /// &lt;param name="id"&gt;更新的@(Model.Display)信息编号&lt;/param&gt;
        /// &lt;returns&gt;@(Model.Display)信息是否存在&lt;/returns&gt;
        public virtual Task&lt;bool&gt; Check@(Model.Name)Exists(Expression&lt;Func&lt;@(Model.Name), bool&gt;&gt; predicate, @(keyType) id = default(@(keyType))
        {
            return @(Model.Name)Repository.CheckExistsAsync(predicate, id);
        }

        /// &lt;summary&gt;
        /// 添加@(Model.Display)信息
        /// &lt;/summary&gt;
        /// &lt;param name="dtos"&gt;要添加的@(Model.Display)信息DTO信息&lt;/param&gt;
        /// &lt;returns&gt;业务操作结果&lt;/returns&gt;
        public virtual Task&lt;OperationResult&gt; Create@(Model.Name.ToPlural())(params @(Model.Name)InputDto[] dtos)
        {
            Check.NotNull(dtos, nameof(dtos));
            return @(Model.Name)Repository.InsertAsync(dtos);
        }

        /// &lt;summary&gt;
        /// 更新@(Model.Display)信息
        /// &lt;/summary&gt;
        /// &lt;param name="dtos"&gt;包含更新信息的@(Model.Display)信息DTO信息&lt;/param&gt;
        /// &lt;returns&gt;业务操作结果&lt;/returns&gt;
        public virtual Task&lt;OperationResult&gt; Update@(Model.Name.ToPlural())(params @(Model.Name)InputDto[] dtos)
        {
            Check.NotNull(dtos, nameof(dtos));
            return @(Model.Name)Repository.UpdateAsync(dtos);
        }

        /// &lt;summary&gt;
        /// 删除@(Model.Display)信息
        /// &lt;/summary&gt;
        /// &lt;param name="ids"&gt;要删除的@(Model.Display)信息编号&lt;/param&gt;
        /// &lt;returns&gt;业务操作结果&lt;/returns&gt;
        public virtual Task&lt;OperationResult&gt; Delete@(Model.Name.ToPlural())(params @(keyType)[] ids)
        {
            Check.NotNull(ids, nameof(ids));
            return @(Model.Name)Repository.DeleteAsync(ids);
        }
    }
}